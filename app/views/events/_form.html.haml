= simple_form_for @event, :method => :put, :url => events_update_path(@event), remote: true, :html => {:class => 'form-horizontal' } do |f|
  = f.input :event_name
  = f.input :location
  = f.input :date, :as => :string, "data-format" => "dd/MM/yyyy hh:mm"
  = f.input :description, as: :text, input_html: { rows: 4, cols: 30 }
  = f.button :submit