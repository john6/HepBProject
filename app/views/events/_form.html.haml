= form_for @event, url: events_update_path(@event), :method => :put do |f|
  %div.form-group
    = f.label "Event name"
    %br
    = f.text_field :event_name
  %div.form-group
    = f.label "Location"
    %br
    = f.text_field :location
  %div.form-group
    = f.label "Date"
    %br
    = f.date_select :date
  %div.form-group
    = f.label "Number of Volunteers"
    %br
    = f.text_field :num_volunteers
  %div.form-group
    = f.label "Description"
    %br
    = f.text_area :description
  %div.form-group
    = f.label "Start time"
    %br
    = f.time_select :start_time, {ampm: true}
  %div.form-group
    = f.label "End time"
    %br
    = f.time_select :end_time, {ampm: true}
  %div.form-group
    = f.submit "Update event", :id => "update_event"