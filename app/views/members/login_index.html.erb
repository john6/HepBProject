<div class='container'>
  <div class='row centered-form'>
    <div class='col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4'>
      <div class='panel panel-default'>

        <div class='panel-heading'>
          <span class='glyphicon glyphicon-lock'><b> Login</b></span>
        </div>

        <div class='panel-body'>
          <%= form_tag members_login_index_path, :method => :post, :class => 'form-horizontal' %>
            <!-- Email -->
            <%= label :members, :email, 'Email' %>
            <div class='form-group'>
              <div class="col-md-12">
                <%= text_field :members, 'email', :type => "email", :class =>"form-control input-sm"%>
              </div>
            </div>
            <!-- Password -->
            <%= label :members, :password, 'Password' %>
            <div class='form-group'>
              <div class="col-md-12">
                <%= text_field :members, 'password', :type => 'password', :class =>"form-control input-sm"%>
              </div>
            </div>
            <!-- Submit Button -->
            <div class='form-group last'>
              <div class='col-md-12'>
                <%= submit_tag 'Submit', :class => 'btn btn-primary btn-md btn-block' %>
              </div>
            </div>
          <!-- Eno of Form -->
        </div>
        <div class='panel-footer'>
          Not yet signed up?
          <%= link_to("Sign up here.", members_sign_up_index_path) %>
        </div>
      </div>
    </div>
  </div>
</div>