<div class='container'>
  <div class='row'>
    <div class='col-md-4 col-md-offset-7'>
      <div class='panel panel-default'>

        <div class='panel-heading'>
          <span class='glyphicon glyphicon-lock'><b> Login</b></span>
        </div>

        <div class='panel-body'>
          <%= form_tag members_login_index_path, :method => :post, :class => 'form-horizontal' %>
            <div class='form-group'>
              <%= label :members, :email, 'Email', :class =>"col-sm-3 control-label" %>
              <div class='col-sm-9'>
                <%= text_field :members, 'email' %>
              </div>
            </div>

            <div class='form-group'>
              <%= label :members, :password, 'Password', :class => 'col-sm-3 control-label' %>
              <div class='col-sm-9'>
                <%= text_field :members, 'password', :type => 'password' %>
              </div>
            </div>

            <div class='form-group last'>
              <div class='col-sm-offset-3 col-sm-9'>
                <%= submit_tag 'Submit', :class => 'btn btn-primary btn-sm' %>
              </div>
            </div>
        </div>
        <div class='panel-footer'>
          Not yet signed up?
          <%= link_to("Sign up here.", members_sign_up_index_path) %>
        </div>
      </div>
    </div>
  </div>
</div>